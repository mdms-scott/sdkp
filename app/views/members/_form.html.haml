= form_for(@member) do |f|
  = f.error_messages
  %fieldset
    %legend
      Information
    %ul.inline
      %li
        = f.label :name
      %li
        = f.text_field :name
    %ul.inline
      %li
        = f.label :pclass, "Class"
      %li
        = f.select :pclass, Member::PCLASSES, :prompt => "Select a class"
  .submit
    = f.submit
    or
    %a.cancel_link{ :href => root_path } Cancel